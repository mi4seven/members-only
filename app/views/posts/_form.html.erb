<div class="box">

  <%# Displaying only one error message per field %>

    <% if @post.errors.any? %>
      <div id="error_explanation">
        <% @post.errors.each do |attr, msg| %>
          <%= "#{msg}" if @post.errors[attr].first == msg %> 
        <% end %>  
      </div>
    <% end %>  

  <%= simple_form_for(@post) do |f| %>
    <article class="media">
      <figure class="media-left">
        <p class="image is-64x64">
          <%# <img src="https://bulma.io/images/placeholders/128x128.png"> %>
          <%= gravatar_image_tag(current_user.email, size: 64, alt: current_user.name) %>
        </p>
      </figure>
      <div class="media-content">
        <div class="field">
          <div class="control">                  
              <%= f.text_field :title, class: "input", placeholder: 'Enter Title' %>       
          </div>
        </div>      
        <div class="field">
           <div class="control">    
              <%= f.text_area :body, class: "textarea", placeholder: 'Enter Post'%> 
          </div>
        </div>

        <nav class="level">
          <div class="level-left">
            <div class="level-item">
              <%= f.button :submit, class: "button is-info" %>
            </div>
            <div class="level-item">
              <%= link_to 'Cancel', root_path, class: "button is-info" %> 
            </div>            
                      
          </div>
        </nav>

      </div>
    </article>

  <% end %>
</div>  

